<!DOCTYPE html>
<html>
  <head>
    <title>Kalmban<%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.1/darkly/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
    

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <div class="alignleft">
        <div class="page-header">
          <h1>Kalmban</h1>
        </div>
      </div>

         <% if current_user %>
            <div id="sign_out" class="alignright" >
              <%= current_user.name %>
              <br/>
              <%= link_to "Sign out", signout_path %>
            </div>
          <% end %>
    </div>

    <hr/>

    <div id="main">
    <% if !flash[:notice].blank? %>
      <div id="flash_notice" class="bg-info" style="padding:10px">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
