<% @page_title = "Tasks" %>
   
<h1>Tasks</h1>

<table class="table table-striped table-hover">
<thead>
  <th>ID</th>
  <th>Title</th>
  <th>Status</th>
  <th>Board</th>
  <th>Actions</th>
</thead>
<% @tasks.each do |task| %>
  <tr>
    <td><%= "#{task.id}" %></td>
    <td><%= "#{task.title}" %></td>
    <td><%= "#{task.status}" %></td>
    <td><%= "#{task.board.title}" %></td>
    <td>     
      <%= link_to('Show', user_board_task_path(task.board.user_id,task.board, task)) %> | 
      <%= link_to('Edit', edit_user_board_task_path(task.board.user_id, task.board, task)) %> | 
      <%= link_to('Delete', delete_user_board_task_path(task.board.user_id, task.board, task)) %> 
    </td>
  </tr>
<% end %>
</table>
