<h1>Users</h1>

<table class="table table-striped table-hover">
<thead>
  <th>ID</th>
  <th>Name</th>
  <th>Actions</th>
</thead>
<% @users.each do |user| %>
  <tr>
    <td><%= "#{user.id}" %></td>
    <td><%= "#{user.name}" %></td>
    <td>
      <%= link_to('Show', user_path(user.id)) %>
    </td>
  </tr>
<% end %>
</table>
