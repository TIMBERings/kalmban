<h1>Users</h1>

<table class="table table-striped table-hover">
<thead>
  <th>ID</th>
  <th>User</th>
  <th>Last Name</th>
  <th>First Name</th>
  <th>Email</th>
  <th>Actions</th>
</thead>
<% @users.each do |user| %>
  <tr>
    <td><%= "#{user.id}" %></td>
    <td><%= "#{user.username}" %></td>
    <td><%= "#{user.last_name}" %></td>
    <td><%= "#{user.first_name}" %></td>
    <td><%= "#{user.email}" %></td>
    <td>
      <%= link_to('Boards', user_boards_path(user.id)) %> |      
      <%= link_to('Show', user_path(user.id)) %> | 
      <%= link_to('Edit', edit_user_path(user.id)) %> | 
      <%= link_to('Delete', delete_user_path(user.id)) %> 
    </td>
  </tr>
<% end %>
</table>
